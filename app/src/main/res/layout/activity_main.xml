<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>
    <app.w8r.CustomViews.BaseTextView
        android:id="@+id/header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/hint_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/welcome_to_weather"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        app:my_style="text_24_semi_white"/>
    <app.w8r.CustomViews.BaseTextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/start_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/check_today_weather"
        android:layout_marginBottom="56dp"
        android:alpha="0"
        app:my_style="text_16_med_white"/>
    <app.w8r.CustomViews.BaseTextView
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="51dp"
        android:layout_marginHorizontal="16dp"
        app:my_style="primaryButton"
        android:alpha="0"
        android:text="@string/get_started"/>
</androidx.constraintlayout.widget.ConstraintLayout>